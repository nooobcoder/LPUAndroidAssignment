<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center"
    android:orientation="vertical"
    android:padding="50dp">

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginBottom="10dp"
        android:background="@color/dark_pink"
        android:orientation="vertical"
        android:padding="20dp">

        <Button
            android:id="@+id/main_scr_btn_one"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Question One - SET A - (MICROSOFT TEAMS)" />

        <Button
            android:id="@+id/main_scr_btn_two"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Question One - Set B - Log in App" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:background="@color/dark_pink"
        android:orientation="vertical"
        android:padding="20dp">

        <Button
            android:id="@+id/main_scr_btn_three"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Question Two - Set B" />
    </LinearLayout>

</LinearLayout>